{
    "name": "root",
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "bump": "ncu -u --deep && npm update && npm install && lerna bootstrap",
        "pack": "npm run bump && git add -A && git commit -am \"packed\" --allow-empty && lerna version patch --yes --force-publish",
        "dev": "lerna run watch --stream --parallel",
        "build": "lerna run build --stream",
        "build:app": "lerna run build --stream --scope @geislabs/website",
        "start": "lerna run start --stream",
        "release:patch": "git add -A && git commit -am \"released\" --allow-empty && lerna version patch --yes --force-publish",
        "test:coverage": "jest --collect-coverage",
        "test": "jest",
        "test:unit": "jest --testPathIgnorePatterns packages/html-e2e",
        "test:e2e": "jest \"packages/html-e2e\"",
        "watch": "jest --watch",
        "watch:e2e": "jest \"packages/html-e2e\" --watch",
        "watch:protocol": "jest \"packages/html-protocol\" --watch",
        "watch:fetch": "jest \"packages/html-fetch\" --watch"
    },
    "devDependencies": {
        "@types/classnames": "^2.3.0",
        "@types/highlight.js": "^10.1.0",
        "@types/jest": "^26.0.23",
        "@types/js-yaml": "^4.0.1",
        "@types/marked": "^2.0.3",
        "@types/node": "^15.12.0",
        "@types/react": "^17.0.9",
        "@types/react-syntax-highlighter": "^13.5.0",
        "@types/rimraf": "^3.0.0",
        "eslint": "^7.27.0",
        "jest": "^27.0.4",
        "lerna": "^4.0.0",
        "npm-check-updates": "^11.6.0",
        "rimraf": "^3.0.2",
        "ts-jest": "^27.0.2",
        "ts-loader": "^9.2.2",
        "ts-node": "^10.0.0",
        "typescript": "4.2.4"
    },
    "dependencies": {
        "@types/google.analytics": "^0.0.41"
    }
}
